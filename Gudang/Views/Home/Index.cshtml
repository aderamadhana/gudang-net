@{
    ViewData["Title"] = "Home Page";
}

<nav class="navbar py-3">
    <div class="container-fluid">
        <div class="d-flex align-items-center gap-3">
            <div>
                <div class="fw-bold fs-5">Good Morning, Ade!</div>
                <div class="brand-subtitle">Here’s what’s happening with your store today.</div>
            </div>
        </div>
    </div>
</nav>

<main class="container-fluid py-4">
    <!-- Metrics -->
    <div class="row g-3 mb-3">
        <div class="col-12 col-md-6 col-xxl-3">
            <div class="p-3 metric-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-title text-uppercase">
                            Total Earnings
                            <span class="badge bg-success-subtle text-success ms-1"><i class="bi bi-arrow-up-right me-1"></i>16.24%</span>
                        </div>
                        <div class="metric-value mt-1">$559.25k</div>
                        <a class="small text-decoration-none" href="#">View net earnings</a>
                    </div>
                    <div class="icon-badge"><i class="bi bi-coin fs-4"></i></div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xxl-3">
            <div class="p-3 metric-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-title text-uppercase">
                            Orders
                            <span class="badge bg-danger-subtle text-danger ms-1"><i class="bi bi-arrow-down-right me-1"></i>3.57%</span>
                        </div>
                        <div class="metric-value mt-1">36,894</div>
                        <a class="small text-decoration-none" href="#">View all orders</a>
                    </div>
                    <div class="icon-badge" style="background:#ecfff1;color:#15803d;"><i class="bi bi-bag fs-4"></i></div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xxl-3">
            <div class="p-3 metric-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-title text-uppercase">
                            Customers
                            <span class="badge bg-success-subtle text-success ms-1"><i class="bi bi-arrow-up-right me-1"></i>29.08%</span>
                        </div>
                        <div class="metric-value mt-1">183.35M</div>
                        <a class="small text-decoration-none" href="#">See details</a>
                    </div>
                    <div class="icon-badge" style="background:#fff7ed;color:#c2410c;"><i class="bi bi-people fs-4"></i></div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-xxl-3">
            <div class="p-3 metric-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-title text-uppercase">
                            My Balance
                            <span class="badge bg-secondary-subtle text-secondary ms-1"><i class="bi bi-dash me-1"></i>0.00%</span>
                        </div>
                        <div class="metric-value mt-1">$165.89k</div>
                        <a class="small text-decoration-none" href="#">Withdraw money</a>
                    </div>
                    <div class="icon-badge" style="background:#f5f3ff;color:#6d28d9;"><i class="bi bi-wallet2 fs-4"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-3 mb-3">
        <div class="col">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Revenue Analytics</h6>
                    <div class="btn-group btn-group-sm btn-filter" role="group" aria-label="Timeframe">
                        <button class="btn btn-outline-secondary active" data-range="monthly">Monthly</button>
                        <button class="btn btn-outline-secondary" data-range="weekly">Weekly</button>
                        <button class="btn btn-outline-secondary" data-range="today">Today</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-wrap">
                        <canvas id="revenueChart" aria-label="Revenue chart" role="img"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bottom row -->
    <div class="row g-4">
        <!-- Sources -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Sources</h6>
                    <button class="btn btn-sm btn-outline-secondary">⋯</button>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <div class="text-muted small">Total sources</div>
                            <div class="fs-4 fw-bold">$ 7652</div>
                            <small class="text-success">▲ 2.2%</small>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-between py-2 border-top">
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge rounded-circle p-3 bg-light border"></span>
                            <div>Source 1</div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="tiny" style="width:120px"><canvas id="spark1"></canvas></div>
                            <div>$ 2478</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-between py-2 border-top">
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge rounded-circle p-3 bg-light border"></span>
                            <div>Source 2</div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <div class="tiny" style="width:120px"><canvas id="spark2"></canvas></div>
                            <div>$ 2625</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Recent Activity Feed</h6>
                    <button class="btn btn-sm btn-outline-secondary">⋯</button>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="small text-muted">28 Apr, 2020 <span class="ms-1">12:07 am</span></div>
                            <div>Responded to need “Volunteer Activities”</div>
                        </div>
                        <div class="timeline-item">
                            <div class="small text-muted">21 Apr, 2020 <span class="ms-1">08:01 pm</span></div>
                            <div>Added an interest “Volunteer Activities”</div>
                        </div>
                        <div class="timeline-item">
                            <div class="small text-muted">17 Apr, 2020 <span class="ms-1">09:23 am</span></div>
                            <div>Joined the group “Boardsmanship Forum”</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
